commands:
    - build
    - clean

build:
    - scons

clean:
    - scons

default-compilers:
    - gcc
    - clang

default-modes:
    - debug
    - release

scons:
    patterns:
        - COMPILER
        - MODE
    single-threaded: no
    build:
        command-line: 
            - compiler={COMPILER}
            - mode={MODE}
    clean:
        command-line:
            - --clean
            - compiler={COMPILER}
            - mode={MODE}
