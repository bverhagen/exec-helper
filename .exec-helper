patterns:
    COMPILER:
        default-values:
            - gcc
            - clang
        short-option: c
        long-option: compiler
    MODE:
        default-values:
            - debug
            - release
        short-option: m
        long-option: mode
    TRIPLET:
        default-values:
            - ""
        long-option: triplet
    TARGET:
        default-values:
            - ""
        short-option: t
        long-option: target
    RUNTARGET:
        default-values:
            - unittest
            - integration
        short-option: r
        long-option: run-target
    MODULE:
        default-values:
            - log
            - config
            - yaml
            - core
            - plugins
            - commander
        short-option: e
        long-option: module
    COMPONENT:
        default-values:
            - ""
        short-option: f
        long-option: component
    ANALYZE:
        default-values:
            - cppcheck
            - clang-static-analyzer
            - valgrind
            - pmd
            - lcov
            - clang-tidy
            - coverity
            - format
            - asan
        short-option: a
        long-option: analyze
    DOCSTYPE:
        default-values:
            - html
            - xml
            - man
        short-option: o
        long-option: docs-type
    COVERITY_ARCHIVE_NAME:
        default-values:
            - exec-helper_$(git describe).xz
        long-option: coverity-archive-name
    SYSROOT:
        default-values:
            - "/"
        short-option: y
        long-option: sysroot
    SOURCE_TYPE:
        default-values:
            - src
            - test
        long-option: source-type

commands:
    setup: Setup the repository for building
    init: Initialize the build infrastructure
    init-build: Initialize the build infrastructure and switches off everything that has nothing to do with building the exec-helper binaries themselves
    init-no-system: Initialize system and disable the use of all system packages
    init-limited-optimization: Initialize system and build using a sensible trade-off between speed and useful backtraces
    init-windows: Initialize windows build
    build: Build-only + install
    build-only: Build only
    install: Install only
    create-installer: Create Windows installer
    clean: Clean build
    distclean: Distclean build
    rebuild: Clean + build
    analyze: Run the specified analysis tool(s)
    run-test: unittest + integration
    unittest: Run the specified unittests
    integration: Run the specified integration tests
    coverage: Run the coverage analysis tools using a specific setup (for convenience)
    memory-check: Run the memory check analysis tool for a specific setup (for convenience)
    undefined-behaviour: Check for undefined behaviour using UBSan
    asan: Check for memory usage errors using AddressSanitizer
    docs: Build + install the documentation
    changelog: Build the changelog
    create-toolchain-file: Create the associated toolchain file
    format: Format and check the format of the sources
    language-server: Start and connect to the c++ language server

setup:
    - command-line-command

init:
    - create-toolchain-file
    - command-line-command

init-build:
    - create-toolchain-file
    - command-line-command

init-no-system:
    - create-toolchain-file
    - command-line-command

init-limited-optimization:
    - create-toolchain-file
    - command-line-command

init-windows:
    - command-line-command

build:
    - build-only
    - install

build-only:
    - ninja

install:
    - command-line-command

create-installer:
    - command-line-command

clean:
    - ninja

distclean:
    - command-line-command

rebuild:
    - clean
    - build

analyze:
    - selector

run-test:
    - selector

unittest:
    - command-line-command

integration:
    - command-line-command

coverage:
    - command-line-command

memory-check:
    - command-line-command

format:
    - command-line-command

docs:
    - ninja
    - command-line-command

selector:
    analyze:
        patterns: ANALYZE
    run-test:
        patterns: RUNTARGET

undefined-behaviour:
    - command-line-command

asan:
    - command-line-command

changelog:
    - ninja
    - command-line-command

create-toolchain-file:
    - command-line-command

language-server:
    - command-line-command

ninja:
    patterns:
        - COMPILER
        - TRIPLET
        - MODE
    build-dir: build/{TRIPLET}{COMPILER}/{MODE}/build
    single-threaded: no
    clean:
        command-line:
            - clean
    docs:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
            - DOCSTYPE
        command-line:
            - docs-{DOCSTYPE}
    changelog:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line:
            - changelog

cppcheck:
    patterns:
        - SOURCE_TYPE
        - MODULE
        - TARGET
    src-dir: "{SOURCE_TYPE}/{MODULE}"
    target-path: "{TARGET}"
    command-line:
        - --std=c++17
        - --error-exitcode=1
        - --includes-file=suppressions/includesfile.cppcheck
        - --inline-suppr
    enable-checks:
        - warning
        - style
        - performance
        - portability
        - information

clang-static-analyzer:
    build-command:
        - init-build
        - build
    clean-command: clean

command-line-command:
    setup:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line: [ ln, -fs, "build/{TRIPLET}{COMPILER}/{MODE}/build/compile_commands.json"]
    init:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line:
            [ cmake, -G, "Ninja", -H., "-Bbuild/{TRIPLET}{COMPILER}/{MODE}/build", "-DCMAKE_INSTALL_PREFIX=build/{TRIPLET}{COMPILER}/{MODE}/install", -DCMAKE_EXPORT_COMPILE_COMMANDS=ON, "-DCMAKE_BUILD_TYPE={MODE}", -DBUILD_HTML_DOCUMENTATION=ON, -DBUILD_XML_DOCUMENTATION=OFF, -DBUILD_MAN_DOCUMENTATION=ON, "-DCMAKE_TOOLCHAIN_FILE=build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake", -DTERMINATE_ON_ASSERT_FAILURE=ON]

    init-build:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line: [ cmake, -G, "Ninja", -H., "-Bbuild/{TRIPLET}{COMPILER}/{MODE}/build", "-DCMAKE_INSTALL_PREFIX=build/{TRIPLET}{COMPILER}/{MODE}/install", -DCMAKE_EXPORT_COMPILE_COMMANDS=ON, "-DCMAKE_BUILD_TYPE={MODE}", -DBUILD_HTML_DOCUMENTATION=OFF, -DBUILD_XML_DOCUMENTATION=OFF, -DBUILD_MAN_DOCUMENTATION=OFF, "-DCMAKE_TOOLCHAIN_FILE=build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake", -DTERMINATE_ON_ASSERT_FAILURE=ON]

    init-no-system:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line:
            [ cmake, -G, "Ninja", -H., "-Bbuild/{TRIPLET}{COMPILER}/{MODE}/build", "-DCMAKE_INSTALL_PREFIX=build/{TRIPLET}{COMPILER}/{MODE}/install", -DCMAKE_EXPORT_COMPILE_COMMANDS=ON, "-DCMAKE_BUILD_TYPE={MODE}", -DBUILD_HTML_DOCUMENTATION=OFF, -DBUILD_XML_DOCUMENTATION=OFF, -DBUILD_MAN_DOCUMENTATION=OFF, "-DCMAKE_TOOLCHAIN_FILE=build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake", -DTERMINATE_ON_ASSERT_FAILURE=ON, -DUSE_SYSTEM_YAML_CPP=OFF, -DUSE_SYSTEM_CATCH=OFF, -DUSE_SYSTEM_GSL=OFF, -DUSE_SYSTEM_RAPIDCHECK=OFF, -DUSE_SYSTEM_LUA=OFF, -DUSE_SYSTEM_INTEGRAL=OFF]

    init-limited-optimization:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line:
            [ cmake, -G, "Ninja", -H., "-Bbuild/{TRIPLET}{COMPILER}/{MODE}/build", "-DCMAKE_INSTALL_PREFIX=build/{TRIPLET}{COMPILER}/{MODE}/install", -DCMAKE_EXPORT_COMPILE_COMMANDS=ON, "-DCMAKE_BUILD_TYPE=RelWithDebInfo", -DBUILD_HTML_DOCUMENTATION=ON, -DBUILD_XML_DOCUMENTATION=OFF, -DBUILD_MAN_DOCUMENTATION=ON, "-DCMAKE_TOOLCHAIN_FILE=build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake", -DTERMINATE_ON_ASSERT_FAILURE=ON]

    init-windows:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
            - EH_WORKING_DIR
        command-line: [cmake, -G, "Ninja", "-H.", "-Bbuild/{TRIPLET}{COMPILER}/{MODE}/build", "-DCMAKE_INSTALL_PREFIX=build/{COMPILER}/{MODE}/install", "-DCMAKE_BUILD_TYPE={MODE}", -DBUILD_HTML_DOCUMENTATION=OFF, -DBUILD_XML_DOCUMENTATION=OFF, -DBUILD_MAN_DOCUMENTATION=OFF, -DTERMINATE_ON_ASSERT_FAILURE=ON, "-DBOOST_ROOT=%cd%/3rdparty/bin/boost", "-DBOOST_INCLUDEDIR=%cd%/3rdparty/bin/boost/include/boost-1_69", -DBoost_USE_STATIC_LIBS=ON, -DBUILD_MAN_DOCUMENTATION=OFF, -DENABLE_TESTING=OFF, -DBoost_NO_SYSTEM_PATHS=ON, -DBoost_USE_STATIC_RUNTIME=OFF]

    create-toolchain-file:
        patterns:
            - COMPILER
            - TRIPLET
            - SYSROOT
            - MODE
        command-line:
            - remove-toolchain-tmp: [ rm, -f, "build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake"]
            - create-build-dir: [ mkdir, -p, "build/{TRIPLET}{COMPILER}/{MODE}"]
            - create-toolchain-tmp: [ cp, toolchain.cmake.in, "build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake"]
            - replace-triplet: [ sed, -i, 's%@TRIPLET@%{TRIPLET}%g', "build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake"]
            - replace-compiler-family: [ sed, -i, 's%@COMPILER_FAMILY@%{COMPILER}%g', "build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake"]
            - replace-sysroot: [ sed, -i, 's%@SYSROOT@%{SYSROOT}%g', "build/{TRIPLET}{COMPILER}/{MODE}/toolchain.cmake"]
    distclean:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line: [ rm, -rf, "build/{TRIPLET}{COMPILER}/{MODE}"]
    install:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
            - COMPONENT
        command-line: [ cmake, "-DCOMPONENT={COMPONENT}", -P, "build/{TRIPLET}{COMPILER}/{MODE}/build/cmake_install.cmake"]
    create-installer:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
#        command-line: [ C:\Program Files (x86)\NSIS\Bin\makensis.exe, "build\{TRIPLET}{COMPILER}\{MODE}\install\bin"]
    unittest:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
            - MODULE
        command-line: [ "build/{TRIPLET}{COMPILER}/{MODE}/install/test/unittest/exec-helper-{MODULE}-unittest"]

    integration:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
            - TARGET
            - EH_WORKING_DIR
        environment:
            PATH: "{EH_WORKING_DIR}/build/{TRIPLET}{COMPILER}/{MODE}/install/bin:/usr/local/bin:/usr/bin"
        working-dir: test/integration
        command-line:
            test: [ pytest, -m, "'{TARGET}'", .]

    coverage:
        environment:
            CXXFLAGS: -g --coverage -fprofile-arcs -ftest-coverage
            LDFLAGS: -g --coverage -fprofile-arcs -ftest-coverage
        command-line: [ exec-helper, init-build, build, analyze, --analyze, lcov, --compiler, gcc, --mode, coverage, --run-target, unittest]
    undefined-behaviour:
        environment:
            CXXFLAGS: -g -fno-omit-frame-pointer -fno-sanitize-recover=undefined
            LDFLAGS: -g -fno-omit-frame-pointer -fno-sanitize-recover=undefined
            UBSAN_OPTIONS: "suppresions=${PWD}/suppressions/ubsan.blacklist"
        command-line: [ exec-helper, init-limited-optimization, build, run-test, --compiler, clang, --mode, undefined-behaviour, --run-target, unittest, integration]
    memory-check:
        command-line: [ exec-helper, analyze, --analyze, valgrind, --run-target, unittest, --compiler, gcc, --mode, debug]
    asan:
        environment:
            ASAN_OPTIONS: "check_initialization_order=1 print_stacktrace=1"
        command-line: 
            - init: [ exec-helper, init-build, --compiler, clang, --mode, asan, --run-target, unittest]
            - overwrite-init: [ cmake, -H., "-Bbuild/clang/asan/build", "-DSANITIZER=address,leak"]
            - build: [ exec-helper, build, --compiler, clang, --mode, asan, --run-target, unittest]
            - run: [ exec-helper, unittest, --compiler, clang, --mode, asan, --run-target, unittest]
    docs:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
            - DOCSTYPE
        command-line: [ cmake, "-DCOMPONENT=docs-{DOCSTYPE}", -P, "build/{TRIPLET}{COMPILER}/{MODE}/build/cmake_install.cmake"]
    coverity:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
            - COVERITY_ARCHIVE_NAME
        command-line:
            - init: [ exec-helper, distclean, init-build, --compiler, "{COMPILER}", --mode, "{MODE}"]
            - cov-build: [ cov-build, --dir, cov-int, exec-helper, build-only, --compiler, "{TRIPLET}{COMPILER}", --mode, "{MODE}" ]
            - archive: [tar, --create, --auto-compress, --file, "{COVERITY_ARCHIVE_NAME}", cov-int]
            - upload: [ echo, "{COVERITY_ARCHIVE_NAME} is now ready to get uploaded to coverity scan"]
    format:
        patterns:
            - SOURCE_TYPE
            - MODULE
        command-line:
            - rewrite-files: [ clang-format, -i, '$(find "{SOURCE_TYPE}/{MODULE}" -name "*.cpp" -o -name "*.h")']
            - check-rewritten: [ git, diff-index, --quiet, HEAD, --]
    changelog:
        patterns:
            - COMPILER
            - TRIPLET
            - MODE
        command-line: [ cmake, "-DCOMPONENT=changelog", -P, "build/{TRIPLET}{COMPILER}/{MODE}/build/cmake_install.cmake"]

    language-server:
        command-line: [ clangd]

valgrind:
    environment:
        CFLAGS: '-DLUAJIT_USE_VALGRIND'
    run-command: run-test
    tool: memcheck
    command-line:
        - --leak-check=full
        - --error-exitcode=1
        - --suppressions=suppressions/valgrind
        - --suppressions=suppressions/luajit.valgrind

pmd:
    patterns:
        - SOURCE_TYPE
        - MODULE
    exec: pmd
    tool:
        - cpd
    language: cpp
    files: 
        - "{SOURCE_TYPE}/{MODULE}"
    minimum-tokens: 100
    command-line:
        - " "

lcov:
    patterns:
        - COMPILER
        - TRIPLET
        - MODE
    run-command: run-test
    base-directory: "build/{TRIPLET}{COMPILER}/{MODE}/build"
    directory: .
    zero-counters: yes
    excludes:
        - /usr*
        - "*/3rdparty/*"
        - "*/test/*"
    gen-html: yes
    gen-html-output: test_coverage
    gen-html-command-line:
        - --num-spaces
        - 4

clang-tidy:
    patterns:
        - SOURCE_TYPE
        - MODULE
    sources:
        - "{SOURCE_TYPE}/{MODULE}/src/*.cpp"

coverity:
    - command-line-command
